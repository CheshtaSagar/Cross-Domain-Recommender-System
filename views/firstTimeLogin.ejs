<body style="background-color:rgb(19, 18, 18);" >
  <%- include ('partials/navbar1') %>
  
  
  <div style="width:250px;  position:fixed; top:12%; right:0;z-index:2" >
     
    </div>

    
    <link rel="stylesheet" href="/styles/section1.css" type="text/css">


    <section class="banner-section">
    
        <div class="row" style="display: flex;">
            <div class="col text-center ">
                <link rel="stylesheet" href="/styles/section1side.css" type="text/css">

                <div class="section1_side">
                    <div class="row" style="display: flex;">
                        <div class="col">
                            
                        </div>
                    </div>
                        <div class="row" style="display: flex;">
