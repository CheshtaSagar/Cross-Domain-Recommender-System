    </section>


  <!-----Modal for login------------------------------------------------------------------------------------------------------->
  <div class="modal fade" id="firstTimeModalCenter" tabindex="-1" role="dialog" aria-labelledby="firstTimeModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content" style="box-shadow: 0 5px 11px rgb(208, 230, 11);">
        <div class="modal-header" style="background-color: #000000; padding-left: 5%; justify-content: center;">
            <h5 class="modal-title" style="font-family: 'Libre Baskerville', serif; color: cornsilk; font-style: bold;">Login</h5>
    
        </div>

        <form action="/login/firstTimeLogin" method="POST">
               
        <div class="modal-body" style="position: relative;">
          
          <%- include ('partials/messages') %> 
               <!--email-->
             <div class="form-group">
                <input type="email" class="form-control input-lg" id="email" name="email" placeholder="Email Address"
                  required="required" />
              </div>
 
              <!--password-->
              <div class="form-group">
                <input type="password" class="form-control input-lg" id="password" name="password" placeholder="Enter Password"
                  required="required" />
              </div>
                
                

        </div>
        <div class="modal-footer">
          <div class="form-group text-center" >
          <button type="submit" class="btn btn-dark font-weight-bold" id="login">Login</button>
          </div>
        </div>

    </form>
      </div>
    </div>
</div>



  
   
