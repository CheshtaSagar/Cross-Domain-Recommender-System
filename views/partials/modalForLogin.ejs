<!--Modal for Login------------------------------------------------------------------------------>
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content" style="box-shadow: 0 5px 11px rgb(208, 230, 11);">
        <div class="modal-header" style="background-color: #000000; padding-left: 42%; justify-content: center;">
            <h5 class="modal-title" style="font-family: 'Libre Baskerville', serif; color: cornsilk; font-style: bold;">Login</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>

        <form action="/login" enctype="multipart/form-data" method="POST">
               
        <div class="modal-body" style="position: relative;">
          
            <%- include ('messages') %>

               <!--email-->
             <div class="form-group">
                <input type="email" class="form-control input-lg" id="email" name="email" placeholder="Email Address"
                  required="required" value="<%= typeof email != 'undefined' ? email : '' %>" />
              </div>
 
              <!--password-->
              <div class="form-group">
                <input type="password" class="form-control input-lg" id="password" name="password" placeholder="Enter Password"
                  required="required" value="<%= typeof password != 'undefined' ? password : '' %>" />
              </div>
                
                

        </div>
        <div class="modal-footer">
          <div style="margin-right: 30%;">
          <p>Don't have and account? <a href="#" class="tooltip-test" title="Tooltip" data-toggle="modal" data-target="#exampleModalCenter1" data-dismiss="modal">Register</a></p>
          </div>
          <div class="form-group text-center" >
          <button type="submit" class="btn btn-dark font-weight-bold" id="submit_login">Login</button>
          </div>
        </div>

    </form>
      </div>
    </div>
</div>