

<div class="modal fade" id="firstTimeModalCenter" tabindex="-1" role="dialog" aria-labelledby="firstTimeModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content" style="box-shadow: 0 5px 11px rgb(208, 230, 11);">
        <div class="modal-header" style="background-color: #000000; padding-left: 5%; justify-content: center;">
            <h5 class="modal-title" style="font-family: 'Libre Baskerville', serif; color: cornsilk; font-style: bold;">Rate these movies to tell us more about yourself!!!</h5>
    
        </div>

        <form action="/preferences/submit" method="POST">
               
        <div class="modal-body" style="position: relative;">
          
          <%- include ('./messages') %> 
        

          <!------------------------------------------------------->
          <div class="container">
          
            <div class="row" style="background-color: #858585;border-radius:5px; height:40px; text-align: center; padding-top: 5px;
            font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
                font: black; font-weight: 500;">
                <div class="col-5">
                    Movie
                </div>
                <div class="col-7">
                    Ratings(0-5)
                </div>
            </div>


            <div class="row">

                <div class="card" style="width: 30rem; ">
                    <div class="card-body">

                      <%  movieNames.forEach(function(movie){%>
                      <div class="row">
                        <div class="col-6" id="<%= movie %>"> <%= movie %></div>
                        <div class="form-group">
                        <div class="col-6">                    
                            <input type="range" class="form-range" name="<%= movie%>" min="0" max="5" step="0.5" id="customRange3">
                        </div>
                        </div>   
                      </div>
                    <%});%>


                     
            </div>
             
          </div>

          <!----------------------------------------------------------->
                

        </div>
        <div class="modal-footer">
          <div class="form-group text-center" >
          <button type="submit" class="btn btn-dark font-weight-bold" id="submit">Submit</button>
          </div>
        </div>

    </form>
      </div>
    </div>
</div>

